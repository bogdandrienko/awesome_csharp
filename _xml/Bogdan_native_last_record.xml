<XRTL
	version="1.0"
	title="Последняя запись по технике"
>
<Resources>
	<Database
		username="dispatcher"
		password="disp"
		provider="MSDAORA"
		data_source="pitEservice"
	/>
    
	<Parameters>
	
		<Parameter caption="Выбор техники" name="ParamType" type="BSTR" control_type="ComboBox" default = "Только бульдозеры" items = "Вся вспомогательная техника|Только бульдозеры"/>
		
    </Parameters>
		
	<Queries>
			
		<Query
			name="GetQuery1"
		>

SELECT 1                                      AS KOL,
       auxtype,
       auxid,
       controlid,
       model,
       TIME,
       Round(( SYSDATE - TIME ) * 24, 2)      AS TIME_DIFFERENT_HOURS,
       Round(( SYSDATE - TIME ) * 24 * 60, 2) AS TIME_DIFFERENT_MINUTES,
       t1.fuel                                AS FUEL,
       t1.speed                               AS SPEED,
       t1.odometer                            AS ODOMETER,
       t1.x                                   AS X,
       t1.y                                   AS Y
--,t1.*
--,au.*
--,eventout.*
FROM   auxeventarchive t1
       left join auxtechnics au
              ON t1.auxid = au.auxid
       inner join eventout
               ON t1.auxid = eventout.vehid
       join (SELECT auxid,
                    Max(TIME) AS ts
             FROM   auxeventarchive
             GROUP  BY auxid) t2
         ON t1.auxid = t2.auxid
            AND t1.TIME = t2.ts
WHERE  ( :ParamType = 'Вся вспомогательная техника'
          OR auxid NOT IN ( 3333, 8733, 2222, 41 ) )
       AND ( TIME BETWEEN Getpredefinedtimefrom('за указанную смену', 1, SYSDATE) AND Getpredefinedtimeto('за указанную смену', 2, SYSDATE) )
ORDER  BY t1.TIME DESC 
		
		</Query>
		
	</Queries>
		
