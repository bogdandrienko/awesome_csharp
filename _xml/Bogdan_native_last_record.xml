		header_query="Header"
		read_only="true"
		query="GetQuery1"
		best_fit="true"
		save_page_settings="true"
		page_settings_guid="GetQuery1_guid"
		refresh_seconds="5"
	>
	
		<Column title="Количество" field="KOL" width="100" visible="true"/>
		<Column title="Тип" field="auxtype" width="100" visible="true"/>
		<Column title="Модель" field="model" width="100" visible="true"/>
		<Column title="Хоз. номер" field="auxid" width="100" visible="true"/>
		<Column title="Контр. номер" field="controlid" width="100" visible="true"/>
		
		<Column title="Время последней записи" field="TIME" width="100" visible="true"/>
		<Column title="Отставание в часах" field="TIME_DIFFERENT_HOURS" width="100" visible="true"/>
		<Column title="Отставание в минутах" field="TIME_DIFFERENT_MINUTES" width="100" visible="true"/>
		
